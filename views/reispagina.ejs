<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= tourTitle || "Tour Overview" %> â€“ TravelBuddy</title>

  <link rel="stylesheet" href="css/bootstrap.css">
  <link rel="stylesheet" href="css/style.css">

  <style>
    body.tour-page {
      background-color: #f5f7fa;
      min-height: 100vh;
    }

    .tour-section {
      padding: 3rem 0;
    }

    .image-map-column {
      background: white;
      border-radius: 1rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .tour-images img {
      width: 100%;
      height: 250px;
      object-fit: cover;
    }

    .tour-map {
      background: url('images/map-placeholder.jpg') center/cover no-repeat;
      height: 300px;
      border-top: 1px solid #ddd;
    }

    .stops-list {
      background: white;
      border-radius: 1rem;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      padding: 2rem;
    }

    .stop-item {
      border-bottom: 1px solid #eee;
      padding: 1rem 0;
    }

    .stop-item:last-child {
      border-bottom: none;
    }

    .stop-item h5 {
      margin-bottom: 0.5rem;
    }
  </style>
</head>
<body class="tour-page d-flex flex-column min-vh-100">
  <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">TravelBuddy</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/profile">Your Profile</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Today's Schedule</a></li>
          <% if (!user) { %>
            <li class="nav-item">
              <a class="nav-link btn btn-primary text-white ms-2" href="/login">Login</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link btn btn-danger text-white ms-2" href="/logout">Logout</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <main class="flex-grow-1">
    <div class="container tour-section">
      <div class="row g-4">
        <!-- Left side: Images & Map -->
        <div class="col-md-6">
          <div class="image-map-column">
            <div class="tour-images">
              <% if (images && images.length > 0) { %>
                <% images.forEach((img) => { %>
                  <img src="<%= img %>" alt="Tour image">
                <% }) %>
              <% } else { %>
                <img src="images/placeholder.jpg" alt="Placeholder image">
                <img src="images/placeholder2.jpg" alt="Placeholder image">
              <% } %>
            </div>
            <div class="tour-map"></div>
          </div>
        </div>

        <!-- Right side: List of Stops -->
        <div class="col-md-6">
          <div class="stops-list">
            <h3 class="mb-4"><%= tourTitle || "Tour Stops" %></h3>
            <% if (stops && stops.length > 0) { %>
              <% stops.forEach((stop, i) => { %>
                <div class="stop-item">
                  <h5><%= i + 1 %>. <%= stop.name %></h5>
                  <p class="text-muted"><%= stop.description %></p>
                </div>
              <% }) %>
            <% } else { %>
              <p>No stops available for this tour yet. Please check back soon!</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </main>

  <footer class="bg-light py-4 mt-auto">
    <div class="container text-center">
      <p>2025 TravelBuddy.</p>
    </div>
  </footer>

  <script src="js/bootstrap.bundle.min.js"></script>
</body>
</html>
