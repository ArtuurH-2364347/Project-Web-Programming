<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= user.name %>'s Profile – TravelBuddy</title>

  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/css/style.css" />

  <style>
    body {
      background-image: url('/images/background1.jpg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      background-repeat: no-repeat;
    }

    .overlay {
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 1rem;
      box-shadow: 0 4px 20px rgba(0,0,0,0.2);
      padding: 2rem;
      margin-top: 2rem;
      margin-bottom: 2rem;
    }

    .profile-header {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .profile-header img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      object-fit: cover;
      flex-shrink: 0;
    }

    .friends-list {
      background-color: #f8f9fa;
      border-radius: 0.75rem;
      padding: 1rem;
    }

    footer {
      background-color: rgba(255, 255, 255, 0.8);
    }

    /* Mobile-specific adjustments */
    @media (max-width: 767px) {
      .overlay {
        padding: 1.5rem;
        margin: 1rem;
        border-radius: 0.75rem;
      }

      .profile-header {
        flex-direction: column;
        text-align: center;
        gap: 0.75rem;
      }

      .profile-header img {
        width: 80px;
        height: 80px;
      }

      .profile-header h2 {
        font-size: 1.5rem;
      }

      .navbar-brand {
        font-size: 1.25rem;
      }

      .nav-item .btn {
        margin-top: 0.5rem;
        width: 100%;
      }

      /* Stack form elements on mobile */
      form.d-flex {
        flex-direction: column !important;
      }

      form.d-flex .form-control {
        margin-bottom: 0.5rem;
      }

      form.d-flex .btn {
        width: 100%;
      }

      /* Adjust friend list items on mobile */
      .list-group-item {
        flex-direction: column;
        align-items: flex-start !important;
        gap: 0.5rem;
      }

      .list-group-item form {
        width: 100%;
      }

      .list-group-item .btn {
        width: 100%;
      }

      /* Better spacing for friend requests */
      .list-group-item form.d-inline {
        display: block !important;
        margin-top: 0.25rem;
      }

      .list-group-item form.d-inline .btn {
        width: 48%;
        display: inline-block;
      }
    }

    /* Tablet adjustments */
    @media (min-width: 768px) and (max-width: 991px) {
      .overlay {
        padding: 1.75rem;
      }

      .profile-header img {
        width: 90px;
        height: 90px;
      }
    }

    /* Improve button spacing and hover */
    .navbar .btn {
      padding: 0.375rem 1rem;
      border-radius: 0.25rem;
    }

    .navbar .btn-danger:hover {
      background-color: #c82333;
      color: white;
    }

    .navbar .btn-primary:hover {
      background-color: #0056b3;
      color: white;
    }

    /* Ensure navbar items align properly */
    .navbar-nav {
      align-items: stretch;
    }

    @media (min-width: 992px) {
      .navbar-nav {
        align-items: center;
      }
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">TravelBuddy</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>

          <% if (user) { %>
            <li class="nav-item"><a class="nav-link" href="/profile">Your Profile</a></li>
            <li class="nav-item"><a class="nav-link" href="/groups">Groups</a></li>
            <li class="nav-item"><a class="nav-link" href="/schedule">Today's Schedule</a></li>
            <li class="nav-item"><a class="nav-link btn btn-danger" href="/logout">Logout</a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
            <li class="nav-item"><a class="nav-link btn btn-primary" href="/login">Login</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Profile Content -->
  <main class="container">
    <div class="overlay">

      <!-- Profile Header -->
      <div class="profile-header mb-4">
        <% if (user.profile_picture) { %>
          <img src="<%= user.profile_picture %>" alt="Profile picture" />
        <% } else { %>
          <img src="/uploads/Placeholder_pfp.png" alt="Profile picture" />
        <% } %>
        <div>
          <h2 class="fw-bold mb-0"><%= user.name %></h2>
          <p class="text-muted mb-0"><%= user.email %></p>
        </div>
      </div>

      <!-- Optional Feedback Message -->
      <% if (message) { %>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
          <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <!-- Bio -->
      <div class="mb-4">
        <h4>Biography</h4>
        <p><%= user.bio || "You haven't written your bio yet." %></p>
      </div>

      <a href="/edit-profile" class="btn btn-secondary mb-4">Edit Profile</a>

      <!-- Add Friend Form -->
      <div class="mb-4">
        <h4>Add a Friend</h4>
        <form action="/add-friend" method="POST" class="d-flex gap-2">
          <input type="email" name="friendEmail" class="form-control" placeholder="Enter your friend's email" required />
          <button type="submit" class="btn btn-primary">Add Friend</button>
        </form>
      </div>

      <!-- Friends List -->
      <div class="mb-4">
        <h4>Friends</h4>
        <div class="friends-list">
          <% if (friends && friends.length > 0) { %>
            <ul class="list-group list-group-flush">
              <% friends.forEach(friend => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <strong><%= friend.name %></strong><br>
                    <small class="text-muted"><%= friend.email %></small>
                  </div>
                  <form action="/remove-friend/<%= friend.id %>" method="POST" style="margin: 0;">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Remove</button>
                  </form>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-muted mb-0">You have no friends yet.</p>
          <% } %>
        </div>
      </div>

      <!-- Friend Requests -->
      <div class="mb-4">
        <h4>Friend Requests</h4>
        <div class="friends-list">
          <% if (requests && requests.length > 0) { %>
            <ul class="list-group list-group-flush">
              <% requests.forEach(request => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <strong><%= request.name %></strong>
                    <small class="text-muted">(<%= request.email %>)</small>
                  </div>
                  <div>
                    <form action="/accept-request/<%= request.id %>" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-success btn-sm">Accept</button>
                    </form>
                    <form action="/reject-request/<%= request.id %>" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                    </form>
                  </div>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-muted mb-0">No pending friend requests.</p>
          <% } %>
        </div>
      </div>

    </div>
  </main>

  <!-- Footer -->
  <footer class="py-4 mt-5 text-center">
    <p class="mb-0">© 2025 TravelBuddy</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>