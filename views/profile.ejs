<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= name %>'s Profile – TravelBuddy</title>

  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/css/style.css" />

  <style>
    body {
      background-image: url('/images/travel-background.jpg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      background-repeat: no-repeat;
    }

    .overlay {
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 1rem;
      box-shadow: 0 4px 20px rgba(0,0,0,0.2);
      padding: 2rem;
      margin-top: 2rem;
    }

    .profile-header {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .profile-header img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      object-fit: cover;
    }

    .friends-list {
      background-color: #f8f9fa;
      border-radius: 0.75rem;
      padding: 1rem;
    }

    footer {
      background-color: rgba(255, 255, 255, 0.8);
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">TravelBuddy</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link active" href="/profile">Your Profile</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Today's Schedule</a></li>
          <li class="nav-item"><a class="nav-link text-danger" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Profile Content -->
  <main class="container">
    <div class="overlay">

      <!-- Profile Header -->
      <div class="profile-header mb-4">
        <img src="/images/default-avatar.png" alt="Profile picture" />
        <div>
          <h2 class="fw-bold mb-0"><%= name %></h2>
          <p class="text-muted mb-0"><%= email %></p>
        </div>
      </div>

      <!-- Optional Feedback Message -->
      <% if (message) { %>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
          <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <!-- Bio -->
      <div class="mb-4">
        <h4>Biography</h4>
        <p><%= bio || "You haven’t written your bio yet." %></p>
      </div>

      <a href="/edit-profile" class="btn btn-secondary mb-4">Edit Profile</a>

      <!-- Friends Section -->
      <div>
        <h4>Friends</h4>

        <!-- Add Friend Form -->
        <form action="/add-friend" method="POST" class="d-flex gap-2 mb-3">
          <input
            type="email"
            name="friendEmail"
            class="form-control"
            placeholder="Enter your friend's email"
            required
          />
          <button type="submit" class="btn btn-primary">Add Friend</button>
        </form>

        <!-- Friends List -->
        <div>
          <h4>Friends</h4>
          <div class="friends-list">
            <% if (friends && friends.length > 0) { %>
              <ul class="list-group list-group-flush">
                <% friends.forEach(friend => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                      <strong><%= friend.name %></strong>
                      <br>
                      <small class="text-muted"><%= friend.email %></small>
                    </div>
                    <form action="/remove-friend/<%= friend.id %>" method="POST" style="margin: 0;">
                      <button type="submit" class="btn btn-outline-danger btn-sm">Remove</button>
                    </form>
                  </li>
                <% }) %>
              </ul>
            <% } else { %>
              <p class="text-muted">You have no friends yet.</p>
            <% } %>
          </div>
        </div>
        <!-- Friend Requests -->
          <div class="mt-4">
            <h4>Friend Requests</h4>
            <div class="friends-list">
              <% if (requests && requests.length > 0) { %>
                <ul class="list-group list-group-flush">
                  <% requests.forEach(request => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <div>
                        <strong><%= request.name %></strong>
                        <small class="text-muted">(<%= request.email %>)</small>
                      </div>
                      <form action="/accept-request/<%= request.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-success btn-sm">Accept</button>
                      </form>
                      <form action="/reject-request/<%= request.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                      </form>
                    </li>
                  <% }) %>
                </ul>
              <% } else { %>
                <p class="text-muted">No pending friend requests.</p>
              <% } %>
            </div>
          </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="py-4 mt-5 text-center">
    <p class="mb-0">2025 TravelBuddy</p>
  </footer>

  <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
